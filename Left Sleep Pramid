Method :-

public static void leftLegPyramid(int n)
	{
		int star = 0;
		for (int i = 1;i<=n ;i++ )
		{
			for (int j=0;j<=star ;j++ )
			{
				System.out.print("* ");
			}
			System.out.println();
			if (i<n/2)
			{
				star+=2;
			}
			else
			{
				star-=2;
			}
		}
	}
